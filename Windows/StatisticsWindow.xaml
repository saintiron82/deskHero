<Window x:Class="DeskWarrior.Windows.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statistics" Height="400" Width="500"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#CC222222" AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        Topmost="True">
    
    <Border BorderBrush="#666" BorderThickness="1" CornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title -->
            <TextBlock Grid.Row="0" Text="ðŸ“Š STATISTICS" 
                       Foreground="White" FontWeight="Bold" FontSize="18"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <!-- Content -->
            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Margin="2">
                                        <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"
                                            Margin="10,2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#FFAA00"/>
                                            <Setter Property="Foreground" Value="#FFAA00"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter Property="Foreground" Value="#888"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- Overview Tab -->
                <TabItem Header="OVERVIEW">
                    <Grid Margin="10,20">
                        <Grid.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="14"/>
                            </Style>
                            <Style x:Key="LabelStyle" TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#AAA"/>
                                <Setter Property="Margin" Value="0,5"/>
                            </Style>
                            <Style x:Key="ValueStyle" TargetType="TextBlock">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Total Damage -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Damage" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtTotalDamage" Text="0" Style="{StaticResource ValueStyle}"/>

                        <!-- Max Damage -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Max Damage (1 Hit)" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtMaxDamage" Text="0" Style="{StaticResource ValueStyle}" Foreground="#FFFFAA00"/>

                        <!-- Monster Kills -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Monster Kills" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtMonsterKills" Text="0" Style="{StaticResource ValueStyle}"/>

                        <!-- Total Inputs -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Total Inputs" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtTotalInputs" Text="0" Style="{StaticResource ValueStyle}"/>
                        
                        <!-- Separator -->
                         <Separator Grid.Row="4" Grid.ColumnSpan="2" Background="#444" Margin="0,15"/>
                    </Grid>
                </TabItem>

                <!-- Graphs Tab -->
                <TabItem Header="24H HISTORY">
                    <Grid Margin="0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Damage History (Last 24h)" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        
                        <!-- Graph Container -->
                        <Border Grid.Row="1" BorderBrush="#444" BorderThickness="0,0,0,1" Margin="10,0">
                            <Canvas x:Name="GraphCanvas" ClipToBounds="True"/>
                        </Border>
                        
                        <!-- Axis Labels -->
                        <Grid Grid.Row="2" Margin="10,5">
                            <TextBlock Text="-24h" Foreground="#666" FontSize="10" HorizontalAlignment="Left"/>
                            <TextBlock Text="Now" Foreground="#666" FontSize="10" HorizontalAlignment="Right"/>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
            
            <!-- Close Button -->
            <Button Grid.Row="2" Content="CLOSE" 
                    Click="CloseButton_Click"
                    Background="#444" Foreground="White"
                    BorderThickness="0" Width="100" Height="30"
                    VerticalAlignment="Bottom">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>
