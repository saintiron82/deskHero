<Window x:Class="DeskWarrior.Windows.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statistics" Height="720" Width="600"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#FF3A3A3A"
        WindowStartupLocation="CenterScreen"
        Topmost="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- TabItem Style -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Margin="2">
                            <ContentPresenter x:Name="ContentSite"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                ContentSource="Header"
                                Margin="10,4"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#00CED1"/>
                                <Setter Property="Foreground" Value="#00CED1"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#666" BorderThickness="1" Background="#FF3A3A3A">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock x:Name="TitleText" Text="ðŸ“Š STATISTICS" Foreground="White" FontWeight="Bold" FontSize="16"/>
            </StackPanel>

            <!-- Content -->
            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
                
                <!-- Tab 1: Battle Record (Unified) -->
                <TabItem x:Name="BattleRecordTab" Header="BATTLE RECORD">
                    <Grid Margin="5,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Time Filters -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Center">
                            <Button x:Name="BtnRange1H" Content="1H" Style="{StaticResource FilterButtonStyle}" Click="Filter_Click" Tag="1H"/>
                            <Button x:Name="BtnRange24H" Content="24H" Style="{StaticResource FilterButtonStyle}" Click="Filter_Click" Tag="24H"/>
                            <Button x:Name="BtnRange7D" Content="7D" Style="{StaticResource FilterButtonStyle}" Click="Filter_Click" Tag="7D"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Summary Cards -->
                                <Border Background="#22FFFFFF" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock x:Name="LblSummaryTitle" Text="SUMMARY" Foreground="#888" FontWeight="Bold" FontSize="11" Margin="0,0,0,8"/>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Kills -->
                                            <Border Grid.Row="0" Grid.Column="0" Background="#33FF6666" CornerRadius="6" Padding="8" Margin="0,0,4,4">
                                                <StackPanel>
                                                    <TextBlock x:Name="LblSummaryKills" Text="KILLS" Foreground="#FF8888" FontSize="9"/>
                                                    <TextBlock x:Name="TxtSummaryKills" Text="0" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Gold -->
                                            <Border Grid.Row="0" Grid.Column="1" Background="#33FFDD00" CornerRadius="6" Padding="8" Margin="4,0,0,4">
                                                <StackPanel>
                                                    <TextBlock x:Name="LblSummaryGold" Text="GOLD" Foreground="#FFD700" FontSize="9"/>
                                                    <TextBlock x:Name="TxtSummaryGold" Text="0" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Damage -->
                                            <Border Grid.Row="1" Grid.Column="0" Background="#33FF8844" CornerRadius="6" Padding="8" Margin="0,4,4,0">
                                                <StackPanel>
                                                    <TextBlock x:Name="LblSummaryDamage" Text="DAMAGE" Foreground="#FFAA66" FontSize="9"/>
                                                    <TextBlock x:Name="TxtSummaryDamage" Text="0" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Max Level -->
                                            <Border Grid.Row="1" Grid.Column="1" Background="#338844FF" CornerRadius="6" Padding="8" Margin="4,4,0,0">
                                                <StackPanel>
                                                    <TextBlock x:Name="LblSummaryLevel" Text="MAX LEVEL" Foreground="#AA88FF" FontSize="9"/>
                                                    <TextBlock x:Name="TxtSummaryLevel" Text="0" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Use Ratio -->
                                <Border Background="#22FFFFFF" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" x:Name="LblInputRatio" Text="INPUT RATIO" Foreground="#888" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <TextBlock x:Name="TxtKeyboardPercent" Text="0% Key" Foreground="#00CED1" FontSize="11" Margin="0,0,10,0"/>
                                            <TextBlock x:Name="TxtMousePercent" Text="0% Mouse" Foreground="#E8D03F" FontSize="11"/>
                                        </StackPanel>
                                        
                                        <!-- Keep hidden canvas for potential drawing logic or remove if using text only -->
                                        <!-- Re-adding canvas to support existing code logic -->
                                        <Canvas x:Name="InputDonutCanvas" Width="0" Height="0" Visibility="Collapsed"/>
                                    </Grid>
                                </Border>

                                <!-- Session List -->
                                <Border Background="#22FFFFFF" CornerRadius="8" Padding="12">
                                    <StackPanel>
                                        <TextBlock x:Name="LblRecentSessions" Text="RECENT SESSIONS" Foreground="#888" FontWeight="Bold" FontSize="11" Margin="0,0,0,10"/>
                                        <StackPanel x:Name="RecentSessionsPanel">
                                            <TextBlock Text="No sessions found." Foreground="#666" FontStyle="Italic" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabItem>

                <!-- Tab 2: Achievements -->
                <TabItem x:Name="AchievementsTab" Header="ACHIEVEMENTS">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="AchievementsPanel" Margin="5,10">
                            <TextBlock Text="Loading achievements..." Foreground="#666" FontStyle="Italic" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>

            <!-- Close Button -->
            <Button Grid.Row="2" x:Name="CloseButton" Content="CLOSE"
                    Click="CloseButton_Click"
                    Background="#444" Foreground="White"
                    BorderThickness="0" Width="100" Height="30"
                    VerticalAlignment="Bottom" Margin="0,10,0,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>
