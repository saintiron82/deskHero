<Window x:Class="DeskWarrior.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="440" Width="300"
        WindowStyle="None" ResizeMode="NoResize"
        Background="Transparent" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Topmost="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        KeyDown="Window_KeyDown">

    <Border BorderBrush="#666" BorderThickness="1" CornerRadius="10" Background="#F03A3A3A">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- X 닫기 버튼 (우측 상단) -->
            <Border Background="#662222"
                    BorderBrush="#FF4444" BorderThickness="1"
                    CornerRadius="6"
                    Width="28" Height="28"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-10,-10,0"
                    Cursor="Hand"
                    MouseLeftButtonDown="CloseButton_Click"
                    Panel.ZIndex="999">
                <TextBlock Text="❌"
                           FontSize="14"
                           Foreground="#FF8888"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- 타이틀 -->
            <TextBlock Grid.Row="0" x:Name="TitleText" Text="⚙️ SETTINGS"
                       Foreground="White" FontWeight="Bold" FontSize="16"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- 창 투명도 -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock x:Name="WindowOpacityLabel" Text="Window Opacity" Foreground="#AAA" FontSize="12" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="WindowOpacitySlider" Grid.Column="0"
                            Minimum="0.1" Maximum="1" Value="1.0"
                            Style="{StaticResource GameSlider}"
                            ValueChanged="WindowOpacitySlider_ValueChanged"/>
                    <TextBlock x:Name="WindowOpacityValueText" Grid.Column="1"
                               Text="100%" Foreground="White" Width="35" TextAlignment="Right"/>
                </Grid>
            </StackPanel>

            <!-- 배경 투명도 -->
            <StackPanel Grid.Row="2" Margin="0,0,0,20">
                <TextBlock x:Name="OpacityLabel" Text="Background Opacity" Foreground="#AAA" FontSize="12" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="OpacitySlider" Grid.Column="0"
                            Minimum="0" Maximum="1" Value="0.4"
                            Style="{StaticResource GameSlider}"
                            ValueChanged="OpacitySlider_ValueChanged"/>
                    <TextBlock x:Name="OpacityValueText" Grid.Column="1"
                               Text="40%" Foreground="White" Width="35" TextAlignment="Right"/>
                </Grid>
            </StackPanel>

            <!-- 사운드 볼륨 -->
            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock x:Name="VolumeLabel" Text="Sound Volume" Foreground="#AAA" FontSize="12" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="VolumeSlider" Grid.Column="0"
                            Minimum="0" Maximum="1" Value="0.2"
                            Style="{StaticResource GameSlider}"
                            ValueChanged="VolumeSlider_ValueChanged"/>
                    <TextBlock x:Name="VolumeValueText" Grid.Column="1"
                               Text="20%" Foreground="White" Width="35" TextAlignment="Right"/>
                </Grid>
            </StackPanel>

            <!-- 언어 선택 -->
            <StackPanel Grid.Row="4" Margin="0,0,0,20">
                <TextBlock x:Name="LanguageLabel" Text="Language / 언어" Foreground="#AAA" FontSize="12" Margin="0,0,0,5"/>
                <ComboBox x:Name="LanguageComboBox"
                          SelectionChanged="LanguageComboBox_SelectionChanged"
                          Background="#555" Foreground="Gray"
                          BorderBrush="#2e2e2eff" BorderThickness="1"
                          Height="28">
                    <ComboBox.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#444"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#666"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="White"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#555"/>
                    </ComboBox.Resources>
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#444"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="8,5"/>
                            <Style.Triggers>
                                <Trigger Property="IsHighlighted" Value="True">
                                    <Setter Property="Background" Value="#666"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#555"/>
                                    <Setter Property="Foreground" Value="#00CED1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBoxItem Content="한국어 (Korean)" Tag="ko-KR" Foreground="White"/>
                    <ComboBoxItem Content="English (영어)" Tag="en-US" Foreground="White"/>
                </ComboBox>
            </StackPanel>

            <!-- 처음부터 다시 시작 버튼 -->
            <StackPanel Grid.Row="5" Margin="0,0,0,20">
                <Button x:Name="ResetGameBtn"
                        Click="ResetGameButton_Click"
                        Background="#8B2222" Foreground="White"
                        BorderThickness="0" Padding="10,8"
                        Cursor="Hand" FontSize="11">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#A02222"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- 닫기 버튼 -->
            <Button Grid.Row="6" x:Name="CloseBtn" Content="CLOSE"
                    Click="CloseButton_Click"
                    Background="#4A5A6A" Foreground="White"
                    BorderThickness="0" Padding="10,8"
                    Cursor="Hand" FontSize="12" FontWeight="Bold"
                    VerticalAlignment="Bottom">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A6A7A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>
