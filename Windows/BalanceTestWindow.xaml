<Window x:Class="DeskWarrior.Windows.BalanceTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Balance Test Tool" Height="700" Width="900"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#F03A3A3A" AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Section Border Style -->
        <Style x:Key="SectionBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Background" Value="#1F1F2E"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="Label" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>

        <!-- Value Style -->
        <Style x:Key="Value" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
        </Style>

        <!-- Input Style -->
        <Style x:Key="Input" TargetType="TextBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="28"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="TestButton" TargetType="Button">
            <Setter Property="Background" Value="#4A5A6A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6A7A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cheat Button Style -->
        <Style x:Key="CheatButton" TargetType="Button" BasedOn="{StaticResource TestButton}">
            <Setter Property="Background" Value="#8B4513"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A0522D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#666" BorderThickness="2" CornerRadius="10">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="ðŸ”§ BALANCE TEST TOOL (DEV ONLY)"
                       Foreground="#00CED1" FontWeight="Bold" FontSize="16"
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0">

                        <!-- Cost Calculator -->
                        <Border Style="{StaticResource SectionBorder}">
                            <StackPanel>
                                <TextBlock Text="ðŸ’° Cost Calculator" Style="{StaticResource SectionTitle}"/>

                                <TextBlock Text="Stat Type:" Style="{StaticResource Label}"/>
                                <ComboBox x:Name="StatTypeCombo" Height="28" Background="#333" Foreground="White"
                                          BorderBrush="#555" SelectionChanged="StatTypeCombo_SelectionChanged">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                    <ComboBoxItem Content="In-Game Stat (Gold)" Tag="ingame" IsSelected="True"/>
                                    <ComboBoxItem Content="Permanent Stat (Crystal)" Tag="permanent"/>
                                </ComboBox>

                                <TextBlock Text="Select Stat:" Style="{StaticResource Label}" Margin="0,10,0,2"/>
                                <ComboBox x:Name="StatCombo" Height="28" Background="#333" Foreground="White"
                                          BorderBrush="#555" SelectionChanged="StatCombo_SelectionChanged">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>

                                <TextBlock Text="Target Level:" Style="{StaticResource Label}"/>
                                <TextBox x:Name="TargetLevelInput" Style="{StaticResource Input}" Text="10" TextChanged="CalculateButton_Click"/>

                                <TextBlock Text="Result:" Style="{StaticResource Label}" Margin="0,10,0,2"/>
                                <TextBlock x:Name="CostResult" Style="{StaticResource Value}" Text="Cost: 0" Foreground="#FFD700"/>
                                <TextBlock x:Name="EffectResult" Style="{StaticResource Value}" Text="Effect: 0" Foreground="#87CEEB"/>

                                <Button Content="Calculate" Style="{StaticResource TestButton}"
                                        Click="CalculateButton_Click" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Simulator -->
                        <Border Style="{StaticResource SectionBorder}">
                            <StackPanel>
                                <TextBlock Text="ðŸŽ® Session Simulator" Style="{StaticResource SectionTitle}"/>

                                <TextBlock Text="Number of Sessions:" Style="{StaticResource Label}"/>
                                <TextBox x:Name="SessionCountInput" Style="{StaticResource Input}" Text="10"/>

                                <TextBlock Text="Avg Level per Session:" Style="{StaticResource Label}"/>
                                <TextBox x:Name="AvgLevelInput" Style="{StaticResource Input}" Text="50"/>

                                <TextBlock Text="Avg Boss Kills per Session:" Style="{StaticResource Label}"/>
                                <TextBox x:Name="AvgBossKillsInput" Style="{StaticResource Input}" Text="5"/>

                                <Button Content="Simulate" Style="{StaticResource TestButton}"
                                        Click="SimulateButton_Click" Margin="0,10,0,0"/>

                                <TextBlock Text="Estimated Results:" Style="{StaticResource Label}" Margin="0,10,0,2"/>
                                <TextBlock x:Name="SimTotalCrystals" Style="{StaticResource Value}" Text="Total Crystals: 0"/>
                                <TextBlock x:Name="SimAvgCrystalsPerSession" Style="{StaticResource Value}" Text="Avg per Session: 0"/>
                            </StackPanel>
                        </Border>

                        <!-- Cheat Mode -->
                        <Border Style="{StaticResource SectionBorder}" BorderBrush="#8B4513">
                            <StackPanel>
                                <TextBlock Text="âš ï¸ Cheat Mode (Test Only)" Style="{StaticResource SectionTitle}"
                                           Foreground="#FF4500"/>

                                <TextBlock Text="Add Gold:" Style="{StaticResource Label}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="CheatGoldInput" Grid.Column="0" Style="{StaticResource Input}" Text="1000"/>
                                    <Button Grid.Column="2" Content="Add" Style="{StaticResource CheatButton}"
                                            Click="CheatAddGold_Click" Width="60"/>
                                </Grid>

                                <TextBlock Text="Add Crystals:" Style="{StaticResource Label}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="CheatCrystalInput" Grid.Column="0" Style="{StaticResource Input}" Text="100"/>
                                    <Button Grid.Column="2" Content="Add" Style="{StaticResource CheatButton}"
                                            Click="CheatAddCrystal_Click" Width="60"/>
                                </Grid>

                                <TextBlock Text="Set Stat Level:" Style="{StaticResource Label}"/>
                                <ComboBox x:Name="CheatStatCombo" Height="28" Background="#333" Foreground="White"
                                          BorderBrush="#555" Margin="0,0,0,5">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="CheatStatLevelInput" Grid.Column="0" Style="{StaticResource Input}" Text="10"/>
                                    <Button Grid.Column="2" Content="Set" Style="{StaticResource CheatButton}"
                                            Click="CheatSetStat_Click" Width="60"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="2">

                        <!-- Current In-Game Stats -->
                        <Border Style="{StaticResource SectionBorder}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“Š Current In-Game Stats" Style="{StaticResource SectionTitle}"/>

                                <Grid x:Name="InGameStatsGrid" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Will be populated dynamically -->
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Current Permanent Stats -->
                        <Border Style="{StaticResource SectionBorder}">
                            <StackPanel>
                                <TextBlock Text="ðŸ’Ž Current Permanent Stats" Style="{StaticResource SectionTitle}"/>

                                <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                    <Grid x:Name="PermanentStatsGrid" Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Will be populated dynamically -->
                                    </Grid>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Close Button -->
            <Button Grid.Row="2" Content="CLOSE" Click="CloseButton_Click"
                    Style="{StaticResource TestButton}" Margin="0,10,0,0"/>
        </Grid>
    </Border>
</Window>
