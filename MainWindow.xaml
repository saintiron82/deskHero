                            </StackPanel>
                            <!-- HP ë°” -->
                            <Grid Height="6" Width="80" Margin="0,3,0,0">
                                <Border Background="#333" CornerRadius="3"/>
                                <Border x:Name="HpBar" Background="#00FF00" CornerRadius="3" HorizontalAlignment="Left" Width="80"/>
                            </Grid>
                            <TextBlock x:Name="HpText" Text="100/100" FontSize="9" Foreground="#AAA" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- ì¤‘ì•™: ë°°í‹€ í•„ë“œ -->
                <Grid Grid.Row="1">
                    <!-- ì  ëª¬ìŠ¤í„° (ìš°ìƒë‹¨, í¬ê²Œ) -->
                    <Image x:Name="MonsterImage"
                           Source="pack://application:,,,/Assets/Images/monster.png"
                           Width="100" Height="100"
                           Stretch="Uniform"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Margin="0,5,20,0"
                           RenderTransformOrigin="0.5,0.5"
                           MouseLeftButtonDown="GameElement_MouseLeftButtonDown">
                        <Image.RenderTransform>
                            <TranslateTransform x:Name="MonsterShakeTransform"/>
                        </Image.RenderTransform>
                    </Image>
                    
                    <!-- ë°ë¯¸ì§€ íŒì—… ì˜ì—­ -->
                    <Canvas x:Name="DamagePopupCanvas"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="100" Height="100"
                            Margin="0,5,5,0"
                            IsHitTestVisible="False"/>
                    
                    <!-- í”Œë ˆì´ì–´ ížˆì–´ë¡œ (ì¢Œí•˜ë‹¨, ìž‘ê²Œ) -->
                    <Image x:Name="HeroImage"
                           Source="pack://application:,,,/Assets/Images/hero.png"
                           Width="70" Height="70"
                           Stretch="Uniform"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="20,0,0,0"
                           MouseLeftButtonDown="GameElement_MouseLeftButtonDown"/>
                    
                    <!-- ê³µê²©ë ¥ í‘œì‹œ (ì¢Œìƒë‹¨) -->
                    <Border Background="#66000000" CornerRadius="5" Padding="4,2"
                            HorizontalAlignment="Left" VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock x:Name="KeyboardPowerText" Text="âŒ¨ï¸ Atk: 1" FontSize="9" Foreground="#88FFFF"/>
                            <TextBlock x:Name="MousePowerText" Text="ðŸ–±ï¸ Atk: 1" FontSize="9" Foreground="#FF88FF"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- í•˜ë‹¨: í”Œë ˆì´ì–´ ì •ë³´ + íƒ€ì´ë¨¸ -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- ê³¨ë“œ/ìž…ë ¥ -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock x:Name="GoldText" Text="ðŸ’° 0" FontSize="11" Foreground="Gold" Margin="0,0,10,0"/>
                        <TextBlock x:Name="InputCountText" Text="âŒ¨ï¸ 0" FontSize="11" Foreground="#AAA"/>
                    </StackPanel>
                    
                    <!-- íƒ€ì´ë¨¸ -->
                    <Border x:Name="TimerBorder" Grid.Column="1" Background="#44000000" CornerRadius="5" Padding="6,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â±ï¸ " FontSize="11" Foreground="White"/>
                            <TextBlock x:Name="TimerText" Text="30" FontSize="13" FontWeight="Bold" Foreground="#00FF00"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- ì—…ê·¸ë ˆì´ë“œ íŒ¨ë„ (ë“œëž˜ê·¸ ëª¨ë“œ ì‹œ í‘œì‹œ) -->
                <Border x:Name="UpgradePanel" Grid.Row="3" 
                        Background="#88000000" CornerRadius="5" 
                        Margin="0,5,0,0" Padding="5"
                        Visibility="Collapsed">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- í‚¤ë³´ë“œ ê³µê²©ë ¥ ì—…ê·¸ë ˆì´ë“œ -->
                            <Button x:Name="UpgradeKeyboardBtn" Grid.Column="0"
                                    Click="UpgradeKeyboard_Click"
                                    Style="{StaticResource KeyboardUpgradeButton}"
                                    Margin="2" Padding="5,3"
                                    ToolTip="Upgrade keyboard attack power">
                                <StackPanel>
                                    <TextBlock x:Name="UpgradeKeyboardText" Text="âŒ¨ï¸ ê³µê²©ë ¥ UP" FontSize="9" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="KeyboardCostText" Text="ðŸ’° 100" FontSize="8"
                                               HorizontalAlignment="Center" Foreground="#FFD700"/>
                                </StackPanel>
                            </Button>

                            <!-- ë§ˆìš°ìŠ¤ ê³µê²©ë ¥ ì—…ê·¸ë ˆì´ë“œ -->
                            <Button x:Name="UpgradeMouseBtn" Grid.Column="1"
                                    Click="UpgradeMouse_Click"
                                    Style="{StaticResource MouseUpgradeButton}"
                                    Margin="2" Padding="5,3"
                                    ToolTip="Upgrade mouse attack power">
                                <StackPanel>
                                    <TextBlock x:Name="UpgradeMouseText" Text="ðŸ–±ï¸ ê³µê²©ë ¥ UP" FontSize="9" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="MouseCostText" Text="ðŸ’° 100" FontSize="8"
                                               HorizontalAlignment="Center" Foreground="#FFD700"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        
                        <!-- í•˜ë‹¨ ë²„íŠ¼ ê·¸ë£¹ (í†µê³„ / ì„¤ì • / ì¢…ë£Œ) -->
                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- í†µê³„ ë²„íŠ¼ -->
                            <Button x:Name="StatsBtn" Grid.Column="0" Content="ðŸ“Š Stats"
                                    Click="StatsButton_Click"
                                    Style="{StaticResource SettingsButton}"
                                    Margin="2,0,2,0" Height="18" FontSize="9"
                                    ToolTip="View game statistics"/>

                            <!-- ì„¤ì • ë²„íŠ¼ -->
                            <Button x:Name="SettingsBtn" Grid.Column="1" Content="âš™ï¸ Settings"
                                    Click="SettingsButton_Click"
                                    Style="{StaticResource SettingsButton}"
                                    Margin="2,0,2,0" Height="18" FontSize="9"
                                    ToolTip="Open settings"/>
                                    
                            <!-- ì¢…ë£Œ ë²„íŠ¼ -->
                            <Button x:Name="ExitBtn" Grid.Column="2" Content="âŒ Exit"
                                    Click="ExitButton_Click"
                                    Background="#662222" Foreground="#FF8888"
                                    BorderThickness="0" Margin="2,0,2,0" Height="18" FontSize="9"
                                    ToolTip="Close DeskWarrior">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- ë””ë²„ê·¸ í‘œì‹œ -->
        <TextBlock x:Name="DebugText" Text="" Foreground="#888" FontSize="8" 
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
        <!-- Game Over Overlay -->
        <Border x:Name="GameOverOverlay" Visibility="Collapsed" Panel.ZIndex="200"
                Background="#EE000000" MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="GameOverTitleText" Text="GENERATION ENDED" Foreground="#FF4444" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Red" BlurRadius="10" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock x:Name="GameOverMessageText" Text="..." Foreground="#AAA" FontSize="10"
                           HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,20" TextWrapping="Wrap" MaxWidth="200"/>

                <Border Background="#33000000" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" x:Name="ReportLevelLabel" Text="Max Level:" Foreground="#AAA" Margin="0,0,15,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ReportLevelText" Text="0" Foreground="White" FontWeight="Bold"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" x:Name="ReportGoldLabel" Text="Gold Earned:" Foreground="#AAA" Margin="0,0,15,8"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ReportGoldText" Text="0" Foreground="Gold" FontWeight="Bold"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" x:Name="ReportDamageLabel" Text="Damage Dealt:" Foreground="#AAA" Margin="0,0,15,8"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ReportDamageText" Text="0" Foreground="#FF8888" FontWeight="Bold"/>
                    </Grid>
                </Border>

                <Button x:Name="NewLifeButton" Content="âš ï¸ BEGIN NEW LIFE" Click="NewLifeButton_Click"
                        Width="140" Height="35" Background="#222" Foreground="White" BorderBrush="#FF4444" BorderThickness="1" Margin="0,0,0,10">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <CheckBox x:Name="AutoRestartCheckBox" Content="Auto Restart in 10s"
                          Foreground="White" FontSize="9" HorizontalAlignment="Center"
                          Checked="AutoRestart_Checked" Unchecked="AutoRestart_Unchecked"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
