        <!-- í¬ì¼“ëª¬ ìŠ¤íƒ€ì¼ ë°°í‹€ ë·° -->
        <Border x:Name="MainBackgroundBorder" Background="#EE1a1a2e" CornerRadius="10" Margin="3">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
